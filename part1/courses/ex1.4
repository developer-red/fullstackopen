const Header = ({course}) => {

    return (<div>
        <h1> {course}</h1>
    </div>)
}

const Content = function ({props}) {
    return (
        < div>
            <Part part={props[0].name} exercises={props[0].exercises}/>
            <Part part={props[1].name} exercises={props[1].exercises}/>
            <Part part={props[2].name} exercises={props[2].exercises}/>
        </div>
    )
}

const Part = function ({part, exercises}) {
    return (
        <p> {part} {exercises} </p>
    )
}

const Total = function ({props}) {
    console.log(props)
    const total = props[0].exercises + props[1].exercises + props[2].exercises
    console.log(total)
    return (<div>
            <p>Number of exercises {total}</p>
        </div>
    )
}

const App = () => {
    const course = 'Half Stack application development'
    const parts = [
        {
            name: 'Fundamentals of React',
            exercises: 10
        },
        {
            name: 'Using props to pass data',
            exercises: 7
        },
        {
            name: 'State of a component',
            exercises: 14
        }
    ]

    return (
        <div>
            <Header  course={course}/>
